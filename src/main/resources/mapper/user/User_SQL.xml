<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="user">
     
	<select id="selectUserByAllInfo" resultType="com.code119.myapp.dto.UserDTO">
		SELECT *
		FROM user_tb
		WHERE email=#{email} AND pwd=#{pwd}
	</select>
       
    <select id="selectUserByEmail" resultType="com.code119.myapp.dto.UserDTO">
		SELECT *
		FROM user_tb
		WHERE email=#{email}
	</select>
	
    <insert id="insertUser">
    	INSERT INTO user_tb 
    	VALUES(#{email},#{pwd})
    </insert>
    
    <delete id="deleteUser">
    	DELETE FROM user_tb 
    	WHERE email=#{email} AND pwd=#{pwd}
    </delete>
</mapper>